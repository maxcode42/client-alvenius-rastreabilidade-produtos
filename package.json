{
  "name": "rastreabilidade",
  "version": "1.0.0",
  "description": "A solução será composta por uma aplicação web integrada ao ERP Protheus, utilizando arquitetura baseada em Backend, Frontend Web e integração via API externa.",
  "main": "index.js",
  "scripts": {
    "predev": "",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "",
    "test": "npm run services:up && npm run services:wait:database && concurrently -n next,jest --hide next --kill-others --success command-jest \"sleep 0; next dev\" \"jest --runInBand --verbose --passWithNoTests\"",
    "posttest": "npm run services:stop",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxcode42/client-alvenius-rastreabilidade-produtos.git"
  },
  "author": "Josuel A. Lopes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxcode42/client-alvenius-rastreabilidade-produtos/issues"
  },
  "homepage": "https://github.com/maxcode42/client-alvenius-rastreabilidade-produtos#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "concurrently": "^8.2.2",
    "cookie": "^1.0.2",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "lucide-react": "^0.563.0",
    "next": "^14.2.5",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "^7.6.1",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "set-cookie-parser": "^2.7.1",
    "swr": "^2.2.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
